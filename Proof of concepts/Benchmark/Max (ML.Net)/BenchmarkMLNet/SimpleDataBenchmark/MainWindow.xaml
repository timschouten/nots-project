            </ListView.View>
        </ListView>
        <ListView x:Name="lsv_Negative" HorizontalAlignment="Left" Height="242" Margin="206.6,181,0,0" VerticalAlignment="Top" Width="222" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
